{{<html}}
{{$main}}

<div class="wrapper search-page">

    <h4>Search Results For &mdash;</h4>


    <h1 id="search-header"></h1>

    <p><span id="result-count"></span> Articles</p>
    {{& page.contents.html}}

    <p class="hiddenText" id="baseUrlValue">{{baseUrl}}</p>

    {{#empty(context.posts)}}
    Empty.
    {{/empty(context.posts)}}
    {{^empty(context.posts)}}
    <div style="visibility: hidden;" id="search-list" class="author-grid">
        {{#context.posts}}
            {{> partials.author_post}}
        {{/context.posts}}
    </div>
    {{/empty(context.posts)}}

</div>

{{/main}}
{{/html}}

<script>
document.addEventListener('DOMContentLoaded', () => {
    const params = new URLSearchParams(window.location.search);
    const q = params.get('q') || '';
    const header = document.getElementById('search-header');
    if (header) {
        header.textContent = q;
    }
});
</script>