{{<html}}
{{$main}}

<div class="wrapper author-page">

    <div class="author-head-grid">

        <div class="author-card">
             <img src="{{page.image}}">
        </div>

        <div class="author-data">
            <h1>{{page.title}}</h1>
            {{page.description}}
            <div class="back-link"><a href="{{baseUrl}}/authors" target="">Back to all authors</a></div>

        </div>


    </div>

    <div class="section-divider"></div>

    {{& page.contents.html}}

    {{#empty(page.posts)}}
    No post yet for this author.
    {{/empty(page.posts)}}
    {{^empty(page.posts)}}
    <div class="author-grid">
    {{#page.posts}}
        {{> partials.author_post}}
    {{/page.posts}}
    </div>
    {{/empty(page.posts)}}

</div>

{{/main}}
{{/html}}
