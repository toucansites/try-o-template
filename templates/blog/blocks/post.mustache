<div class="card">
    <div class="meta">
        <time datetime="{{publication.html}}">{{publication.html}}</time>
        {{#readingTime}} &bull; <span class="reading-time">{{readingTime}} min read</span>{{/readingTime}}
        {{#featured}} &bull; <span class="featured">featured</span>{{/featured}}
    </div>

    <h2 class="title"><a href="{{permalink}}" target="">{{title}}</a></h2>
    <p>{{description}}</p>
    
    <div class="tag-list">
    {{#tags}}
        <a href="{{permalink}}"><small>{{title}}</small></a>
    {{/tags}}
    </div>

    <div class="author-list">
    {{#authors}}
        <a href="{{permalink}}">
        {{#imageUrl}}<img class="small rounded" src="{{imageUrl}}" alt="{{title}}">{{/imageUrl}}
        </a>
    {{/authors}}
    </div>
</div>
